@model QuestLibraryApplication.Models.UserModel.IdentityDB

@{
    Layout = "~/Views/Shared/_LayoutNoNav.cshtml";
}
<style>
    footer {
        position: fixed;
        bottom: 0px;
        width: 100%;
        padding: 20px;
        text-align: center;
    }

    label {
        font-weight: bold;
        padding-bottom: 10px;
        margin-top: 10px;
        margin-left: 5px;
    }

    .inputFields {
        margin-left: 5px;
    }
    .wholeForm {
        margin-top: 40px;
        margin-left: 50vh;
    }
    .buttonCustomize {
        margin-left: 5px;
        margin-top: 20px;
    }
    @@media (max-width: 414px) {
        .wholeForm {
            margin-left: 40px;
        }
    }

    @@media (max-width: 360px) {
        .wholeForm {
            margin-left: 30px;
        }
    }

    @@media (max-width: 768px) {
        .wholeForm {
            margin-left: 200px;
        }
    }

    @@media (max-width: 820px) {
        .wholeForm {
            margin-left: 220px;
        }
    }

    @@media (max-width: 1024px) {
        .wholeForm {
            margin-left: 350px;
        }
    }

    @@media (max-width: 912px) {
        .wholeForm {
            margin-left: 220px;
        }
    }

    @@media (max-width: 540px) {
        .wholeForm {
            margin-left: 120px;
        }
    }

    @@media (max-width: 412px) {
        .wholeForm {
            margin-left: 45px;
        }
    }

    @@media (max-width: 430px) {
        .wholeForm {
            margin-left: 55px;
        }
    }

    @@media (max-width: 390px) {
        .wholeForm {
            margin-left: 35px;
        }
    }
</style>

<div class="pb-3">
    <h4>User Login</h4>
    <hr />
</div>

<div class="wholeForm ">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control inputFields" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control inputFields",@type="password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-dark buttonCustomize" style="width:100%" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
